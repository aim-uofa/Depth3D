    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },

        {
            "name": "train",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/mono/tools/train.py",
            "console": "integratedTerminal",
            "env": {"CUDA_VISIBLE_DEVICES":"3", "PYTHONPATH":"${workspaceFolder}"},
            "args": [
                "mono/configs/DPTHead/debug.py",
                "--launcher", "slurm",
                "--use-tensorboard",
            ],
            "justMyCode": false
        },
    ]
}